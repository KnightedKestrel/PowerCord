{
  "name": "powercord",
  "version": "0.0.1",
  "scripts": {
    "dev:bot": "npm run dev --prefix bot",
    "dev:web": "npm run dev --prefix web",
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:web\"",
    "format": "npm run prettier:fix && npm run lint:fix",
    "install:bot": "npm install --prefix bot",
    "install:web": "npm install --prefix web",
    "install:all": "npm run install:bot && npm run install:web",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test:bot": "npm run test --prefix bot",
    "test:web": "npm run test --prefix web",
    "clean": "rm -rf node_modules package-lock.json bot/node_modules bot/package-lock.json web/node_modules web/package-lock.json web/.nuxt web/.output web/dist",
    "update:locks": "npm install && npm install --prefix bot && npm install --prefix web"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@nuxt/eslint": "^1.4.1",
    "@types/eslint__js": "^9.14.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  }
}
