{
  "name": "powercord",
  "version": "0.0.1",
  "scripts": {
    "dev:bot": "npm run dev --prefix bot",
    "dev:web": "npm run dev --prefix web",
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:web\"",
    "format": "npm run prettier:fix && npm run lint:fix",
    "install:bot": "npm install --prefix bot",
    "install:web": "npm install --prefix web",
    "install:all": "npm install && npm install --prefix bot && npm install --prefix web",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test:bot": "npm run test --prefix bot",
    "test:web": "npm run test --prefix web",
    "clean": "rm -rf node_modules package-lock.json bot/node_modules bot/package-lock.json web/node_modules web/package-lock.json web/.nuxt web/.output web/dist"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.39.1",
    "@vue/compiler-sfc": "^3.5.24",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript-eslint": "^8.47.0"
  }
}
